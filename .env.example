# Consearch Configuration
# Copy this file to .env and fill in your values

# Database
CONSEARCH_DATABASE_URL=postgresql+asyncpg://consearch:consearch@localhost:5433/consearch

# Redis (optional)
CONSEARCH_REDIS_URL=redis://localhost:6379/0
CONSEARCH_CACHE_TTL=3600

# Meilisearch (optional)
CONSEARCH_MEILISEARCH_URL=http://localhost:7700
CONSEARCH_MEILISEARCH_KEY=dev-master-key

# Book Resolvers
CONSEARCH_ISBNDB_API_KEY=           # Get from https://isbndb.com/
CONSEARCH_GOOGLE_BOOKS_API_KEY=     # Optional, get from Google Cloud Console

# Paper Resolvers
CONSEARCH_CROSSREF_EMAIL=           # Your email for Crossref polite pool
CONSEARCH_SEMANTIC_SCHOLAR_API_KEY= # Optional, get from https://www.semanticscholar.org/product/api

# App Settings
CONSEARCH_DEBUG=false
CONSEARCH_LOG_LEVEL=INFO
